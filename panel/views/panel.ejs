<!-- panel/views/panel.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>Ticket Panel</title>
</head>
<body>
  <header>
    <h1>Welcome, <%= user.username %>!</h1>
  </header>
  
  <div class="container">
    <h2>Your Tickets</h2>
    <ul>
      <% tickets.forEach(ticket => { %>
        <li>
          <div class="ticket-info">
            <span>Ticket ID: <%= ticket.id %></span>
            <span class="ticket-status">Status: <%= ticket.status %></span>
          </div>
          <div class="ticket-action">
            <button onclick="location.href='/tickets/<%= ticket.id %>';">View Details</button>
            <!-- Need to Impl Close, Reply, Tags etc -->
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

  <footer>
    <p>&copy; 2024 Tasha by SnowyJS</p>
  </footer>
</body>
</html>
